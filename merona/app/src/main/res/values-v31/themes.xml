<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="Theme.Allttaemerona" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_light</item>
        <item name="colorSecondaryVariant">@color/main_purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:windowSplashScreenBackground">@color/main_purple</item>
        <item name="android:windowSplashScreenAnimatedIcon">@drawable/icon_merona</item>
        <item name="android:windowSplashScreenAnimationDuration">1000</item>
    </style>
</resources>