<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Allttaemerona" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green</item>
        <item name="colorPrimaryVariant">@color/green</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/purple_light</item>
        <item name="colorSecondaryVariant">@color/main_purple</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
    </style>
    <style name="Theme.Allttaemerona.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Allttaemerona.AppBarOverlay"
        parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Allttaemerona.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="Theme.Allttaemerona.Splash">
        <item name="android:statusBarColor">@color/main_purple</item>
        <item name="android:windowBackground">@color/main_purple</item>
    </style>
    <style name="Theme.Allttaemerona.Sign">
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowBackground">@color/white</item>
    </style>
</resources>